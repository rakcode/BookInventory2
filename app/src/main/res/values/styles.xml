<resources>

    <!-- Base application theme -->
    <style name="Theme.TransparentAppBar" parent="Base.Theme.TransparentAppBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Base.Theme.TransparentAppBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <!-- fontFamily: target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Base.Theme.TransparentAppBar">
        <item name="android:windowBackground">@color/offWhiteColor</item>
    </style>

    <!-- Theme of the details screen -->
    <style name="DetailTheme" parent="Base.Theme.TransparentAppBar">
        <item name="android:windowBackground">@color/offWhiteColor</item>
        <item name="buttonStyle">@style/DefaultFontButtonStyle</item>
    </style>

    <!-- Collapsed CollapsingToolbarLayout Title -->
    <style name="CollapsedAppBar" parent="Base.Theme.TransparentAppBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Expanded CollapsingToolbarLayout Title -->
    <style name="ExpandedAppBar" parent="Base.Theme.TransparentAppBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for a Label in the editor -->
    <style name="LabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditorFieldStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <!-- Style for required field asterisk -->
    <style name="AsteriskStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/required_field_asterisk</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Style for required field asterisk -->
    <style name="AsteriskDescStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for the Spinner -->
    <style name="SpinnerFieldStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <!-- Style for the Spinners Background -->
    <style name="EditorSpinnerBg" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <!-- Settings Preferences Text Style -->
    <style name="SettingsFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- Dialog Styles -->
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>
    <!-- Settings Dialog Styles -->
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- List Item Button Style -->
    <style name="SaleButtonStyle">
        <item name="android:background">@drawable/sale_button_states</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Default Font Text Style -->
    <style name="DefaultFontTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Default Font Button Style -->
    <style name="DefaultFontButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Main Input Style -->
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Price Input -->
    <style name="PriceInputStyle" parent="InputStyle">
        <item name="android:drawableRight">@drawable/ic_attach_money</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources>

